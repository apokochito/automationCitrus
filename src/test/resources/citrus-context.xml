<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:citrus-http="http://www.citrusframework.org/schema/http/config"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
        http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd">

    <citrus:namespace-context>
        <citrus:namespace prefix="xh"
                          uri="http://www.w3.org/1999/xhtml"/>
    </citrus:namespace-context>

    <context:property-placeholder
            system-properties-mode="FALLBACK"/>
    <util:list id="clientInterceptor">
        <bean class="config.RestClientInterceptor">
        </bean>
    </util:list>

    <citrus-http:client id="client"
                        request-url="http://www.executeautomation.com/"
                        content-type="text/html"
                        request-method="GET"
                        interceptors="clientInterceptor"
                        timeout="60000"
                        error-strategy="throwsException" />

    <context:annotation-config/>

    <!-- JavaConfig bean post-processor -->
    <bean class="org.springframework.context.annotation.ConfigurationClassPostProcessor"/>

    <!-- Citrus Java config -->
    <bean id="" class="com.consol.citrus.config.CitrusSpringConfig"/>

    <bean id="customHttpConnectionFactory"
          class="config.customHttpConnectionFactory"
    />
</beans>